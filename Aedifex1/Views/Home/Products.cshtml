@model List<Aedifex1.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="products-page">
    <header class="header">
        <div class="container">
            <h1 class="display-4">How To order</h1>
        </div>
    </header>

    <section id="product-filter" class="filter-section">
        <div class="container">
            <input type="text" placeholder="Search products..." class="search-box">
            <button class="btn btn-primary">Search</button>
        </div>
    </section>

    <section id="product-list" class="product-list-section">
        <div class="container">
            <div class="row">
                @foreach (var Product in Model)
                {
                    <div class="col-md-3">
                        <div class="product-item">
                            <div class="product-image">
                                <img src="@Product.Image" alt="@Product.Name" style="width: 100%; height: 150px; object-fit: cover;">
                            </div>
                            <h3>@Product.Name</h3>
                            <p>@Product.Description</p>
                            <button class="btn btn-secondary">View Details</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <section id="contact" class="contact-section">
        <div class="container">
            <h2>Contact Us</h2>
            <p>Have questions? Contact us on WhatsApp!</p>
            <a href="https://wa.me/+6287776651884" target="_blank" class="btn btn-success">Chat on WhatsApp</a>
        </div>
    </section>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2023 Your Company. All rights reserved.</p>
        </div>
    </footer>
</div>

<style>
    body {
        background-color: #000; /* Warna hitam untuk latar belakang */
    }

    .products-page {
        font-family: Arial, sans-serif;
    }

    .header {
        text-align: center;
        margin-bottom: 20px;
    }

    .filter-section {
        padding: 20px 0;
        text-align: center;
    }

    .product-list-section {
        padding: 50px 0;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
    }

    .col-md-3 {
        flex: 1 1 calc(25% - 15px);
        box-sizing: border-box;
    }

    .product-item {
        background: #f8f9fa; /* Tetap dengan warna default */
        border: 1px solid #ddd;
        padding: 15px;
        text-align: center;
        border-radius: 5px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .product-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

    .product-image img {
        border-radius: 5px;
    }

    .contact-section {
        padding: 30px 0;
        text-align: center;
        background-color: #e9ecef; /* Tetap dengan warna default */
    }

    .footer {
        padding: 20px 0;
        text-align: center;
    }
</style>


