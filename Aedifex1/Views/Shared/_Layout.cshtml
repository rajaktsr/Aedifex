﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aedifex1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Aedifex1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a href="@Url.Action("Index", "Home")" class="navbar-brand">
             <img src="https://cdn.builder.io/api/v1/image/assets/c0fe919eaac64489a9f4a10f9a6e2749/59ecba908ff02c44533b95f663263464222c3397f5a28748c12c2e6073ab3193?apiKey=c0fe919eaac64489a9f4a10f9a6e2749&" alt="Aedifex Company Logo" class="logo" width="244" height="60" />
         </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="AboutUs" asp-action="Index">ABOUT US</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Products">PRODUCTS</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    .navbar {
        background-color: #0A0A0A, 0.8;
        width: 100%;
        min-height: 128px;
        display: flex;
        align-items: center;
        color: #FFFFFF;
        letter-spacing: 1.44px;
        padding: 42px 16px; /* Adjusted padding */
        font: 500 24px Nohemi, -apple-system, BlinkMacSystemFont;
        border-bottom: 1px solid #B8B8B8;
        box-sizing: border-box;
        position: fixed; /* Sticks to the top */
        top: 0;
        z-index: 1000; /* Ensure it stays above other elements */
        backdrop-filter: blur(10px);
    }

    .container-fluid {
        margin: 0;  
    }

    .navbar-collapse {
    }

    .nav-item {
        padding-right: 76px;
    }
</style>
