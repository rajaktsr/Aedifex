@{
    ViewData["Title"] = "Products";
}

<div class="products-page">
    <header class="header">
        <div class="container">
            <h1 class="display-4">How To Order</h1>
        </div>
    </header>

    <section id="product-filter" class="filter-section">
        <div class="container">
            <input type="text" placeholder="Search products..." class="search-box">
            <button class="btn btn-primary">Search</button>
        </div>
    </section>

    <section id="product-list" class="product-list-section">
        <div class="container">
            <div class="row">
                @for (int i = 1; i <= 20; i++)
                {
                    <div class="col-md-3">
                        <div class="product-item">
                            <div class="product-image">Product Image</div>
                            <h3>Product {i}</h3>
                            <p>Short description of the product.</p>
                            <button class="btn btn-secondary">View Details</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <section id="contact" class="contact-section">
        <div class="container">
            <h2>Contact Us</h2>
            <p>Have questions? Contact us on WhatsApp!</p>
            <a href="https://wa.me/+62-877-7665-1884" target="_blank" class="btn btn-success">Chat on WhatsApp</a>
        </div>
    </section>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2023 Your Company. All rights reserved.</p>
        </div>
    </footer>
</div>

<style>
    .products-page {
        font-family: Arial, sans-serif;
    }

    .header {
        background: #007bff;
        color: white;
        padding: 20px 0;
        text-align: center;
    }

    .navbar a {
        color: white;
        margin: 0 10px;
        text-decoration: none;
    }

    .filter-section {
        background: #f8f9fa;
        padding: 20px 0;
        text-align: center;
    }

    .search-box {
        padding: 10px;
        width: 300px;
        margin-right: 10px;
    }

    .product-list-section {
        padding: 50px 0;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
    }

    .col-md-3 {
        flex: 1 1 calc(25% - 15px);
        box-sizing: border-box;
    }

    .product-item {
        background: #f8f9fa;
        border: 1px solid #ddd;
        padding: 15px;
        text-align: center;
        border-radius: 5px;
    }

    .product-image {
        background: #ccc;
        height: 150px;
        margin-bottom: 10px;
    }

    .contact-section {
        background: #e9ecef;
        padding: 30px 0;
        text-align: center;
    }

        .contact-section .btn {
            margin-top: 10px;
        }

    .footer {
        background: #f8f9fa;
        padding: 20px 0;
        text-align: center;
    }
</style>
