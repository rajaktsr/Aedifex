@{
    ViewData["Title"] = "Home Page";
}

<div class="landing-page">
    <!-- Header -->

    <!-- Fabric Section -->
    <section class="fabric-section text-center">
        <h2>Fabric for Varsity Jacket</h2>
        <div class="fabric-options">
            <div class="option">
                <h3>Varsity Grade A+</h3>
                <p>Detail tentang Grade A+.</p>
            </div>
            <div class="option">
                <h3>Varsity Grade A</h3>
                <p>Detail tentang Grade A.</p>
            </div>
        </div>
    </section>

    <!-- Mitra AEDIFEX -->
    <section class="partners-section text-center">
        <h2>Mitra AEDIFEX</h2>
        <div class="partners-grid">
            <img src="/path-to-partner1.png" alt="Partner 1">
            <img src="/path-to-partner2.png" alt="Partner 2">
            <!-- Tambahkan logo lainnya -->
        </div>
    </section>

    <!-- Testimonials -->
    <section class="testimonials-section text-center">
        <h2>Testimonials</h2>
        <div class="testimonial-slider">
            <div class="testimonial-item">
                <img src="/path-to-testimonial1.jpg" alt="Testimonial 1">
                <p>SMAIT Tunas Bangsa</p>
                <p>⭐⭐⭐⭐⭐</p>
            </div>
            <div class="testimonial-item">
                <img src="/path-to-testimonial2.jpg" alt="Testimonial 2">
                <p>SMAIT Tunas Bangsa</p>
                <p>⭐⭐⭐⭐⭐</p>
            </div>
        </div>
    </section>

    <!-- Why Us -->
    <section class="why-us-section text-center">
        <h2>Why Us?</h2>
        <p>2 years experience</p>
        <p>Lebih dari 14.000 jaket angkatan...</p>
    </section>

    <!-- Keunggulan -->
    <section class="advantages-section text-center">
        <h2>Keunggulan</h2>
        <ul>
            <li><strong>Aman</strong></li>
            <li><strong>Terpercaya</strong></li>
            <li><strong>Bergaransi</strong></li>
        </ul>
    </section>

    <!-- Produk Kami -->
    <section class="products-section text-center">
        <h2>Our Products</h2>
        <div class="products-grid">
            <div class="product-item">
                <img src="/path-to-varsity.jpg" alt="Varsity">
                <p>Varsity</p>
            </div>
            <!-- Tambahkan produk lainnya -->
        </div>
    </section>
</div>

<style>
    /* Sesuaikan CSS sesuai desain */
    body {
        background: #000;
        color: #fff;
        font-family: Arial, sans-serif;
        margin: 0;
    }

    .header {
        background: #000;
        border-bottom: 1px solid #fff;
        padding: 10px 20px;
    }

        .header .nav-link {
            color: #fff;
            font-weight: bold;
            text-decoration: none;
            margin-left: 20px;
        }

    .fabric-section, .partners-section, .testimonials-section, .why-us-section, .advantages-section, .products-section {
        padding: 50px 20px;
    }

    .fabric-options, .partners-grid, .testimonial-slider, .products-grid {
        display: flex;
        justify-content: center;
        gap: 20px;
        flex-wrap: wrap;
    }

        .fabric-options .option, .testimonial-item, .product-item {
            background: #1a1a1a;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
        }
</style>
